#include <iostream>
#include <cstring>
using namespace std;

int main() {
    char s1[100] = "", s2[50], s3[50];
    cout << "Enter first string: ";
    cin.getline(s2, 50);
    cout << "Enter second string: ";
    cin.getline(s3, 50);

    strcat(s1, s2);
    strcat(s1, " ");
    strcat(s1, s3);

    cout << "Joined sentence: " << s1;
    return 0;
}
